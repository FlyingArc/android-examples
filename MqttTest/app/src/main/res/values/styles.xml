<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle" parent="TextContent">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextRow" parent="TextContent">
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="TextContent">
        <item name="android:layout_width">120dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Input" parent="TextRow">
        <item name="android:layout_width">120dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
